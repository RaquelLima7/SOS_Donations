<div class="navbar navbar-expand-sm navbar-primary navbar-lewagon">
  <%= link_to "/", class: "navbar-brand ml-5" do %>
    <%= image_tag('sos-donations-logo.png', style: "width: 90px;") %>
    <span class="align-bottom px-2" style="font-size: 1rem;">Building a better world</span>
  <% end %>


  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
     <%= link_to "#", class: "nav-link"  do %>
          <i class="fas fa-hands-helping px-2"></i>Campaigns
        <% end %>
      <li class="nav-item">
        <%= link_to institutions_path, class: "nav-link"  do %>
          <i class="fas fa-building px-2"></i>Institutions
        <% end %>
      </li>
      <li class="nav-item">
        <%= link_to "#", class: "nav-link"  do %>
          <i class="fas fa-search px-2"></i>Search
        <% end %>
      </li>
      <% if user_signed_in? %>
     <!--    aqui tinha um link para button -->
        <li class="nav-item">
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.present? %>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", style: "cursor: pointer;", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag('neutral-avatar.png', class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false) %>
          <% end %>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Donations", dashboard_path(results_query: 'donations'), class: "dropdown-item" %>
            <%= link_to "Create a campaign", "#", class: "dropdown-item" %>
            <%= link_to "Manage account", "/dashboard", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to new_user_session_path, class: "nav-link"  do %>
            <i class="fas fa-user px-2"></i>Login
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>
