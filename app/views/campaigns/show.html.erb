<div class="container my-5">
  <div class="card d-flex">
    <div class="d-flex justify-content-around ml-5 mr-5">
      <div class="container">
        <div class="mt-5">
          <h1><b> <%= @campaign.name.capitalize %></b> </h1>
        </div>
        <div class="my-2">
          <p class="text-justify mt-3 mr-4"> <%= @campaign.description.capitalize %>
        </div>
      </div>
      <div class="div mt-3">
        <% if @campaign.photos.first.present? %>
          <%= cl_image_tag @campaign.photos.first.key, class: "card-img p-2" %>
        <% else %>
          <%= image_tag('neutral-institution.jpg', class: "p-2") %>
        <% end %>
      </div>
    </div>
    <div class="d-flex justify-content-between align-items-center ml-5 mb-3">
      <div class="div">
        <%= link_to 'Donation', new_campaign_donation_path(@campaign), class: 'btn btn-primary'%>
      </div>
    </div>
  </div>
</div>
