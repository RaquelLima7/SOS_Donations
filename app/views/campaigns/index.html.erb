<div class="container">
  <div class="d-flex justify-content-strongetween mt-4">
    <h1><strong> Campaigns </b></h1>
  </div>
  <div class="container mt-3">
    <div class="row mt-4">
	    <% @campaigns.each do |campaign| %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card my-3 card-campaign" style="width: 18rem;">
              <% if campaign.photos.first.present? %>
                <%= cl_image_tag campaign.photos.first.key, class: "card-img p-2" %>
              <% else %>
                <%= image_tag('neutral-institution.jpg', class: "p-2") %>
              <% end %>
            <div class="card-body">
              <h4 class="card-title"> <strong><%= campaign.name %></strong></h4>
                <div class="d-flex justify-content-between align-items-center">
                  <span class="badge btn-primary mr-3"> <%=campaign.total_expression%><span>
                 
                  <span class="badge btn-primary mr-3"> <%=campaign.indicator%><span>
                  <%= link_to  campaign do %>
                    <i class="h4 fas fa-search-plus size: 5x"></i>
                  <% end %>		
                </div>
            </div>	
          </div>
        </div>
      <%end%>  
    </div>
  </div>
</div>
