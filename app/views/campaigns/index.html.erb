<div class="container">
  <div class="d-flex justify-content-between mt-4">
    <h1><b> Campaigns </b></h1>
    <div>
      <%= link_to 'New Campaign', new_campaign_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="container mt-3">
    <div class="row mt-4">
	    <% @campaigns.each do |campaign| %>
		    <div class="col-lg-4 col-md-6 col-sm-12">

          <div class="card my-3" style="width: 18rem;">
			    
            <% if campaign.photos.first.present? %>
              <%= cl_image_tag campaign.photos.first.key, class: "p-2" %>
            <% else %>
              <%= image_tag('neutral-institution.jpg', class: "p-2") %>
            <% end %>
          </div>
          <div class="card-body">
            <h4 class="card-title"> <b><%= campaign.name.capitalize %></b></h4>
            <div class="d-flex justify-content-between align-items-center">
				        <%= link_to  campaign do %>
                   <i class="h3 fas fa-search-plus size: 5x"></i>
                <% end %>		
              </div>
          </div>	
			  </div>
      <%end%>  
    </div>
  </div>
</div>
