<div class="container">
  <div class="mr- mt-4">
    <h1><strong> Campaigns </b></h1>
  </div>
  <div class="container mt-3">
    <div class="row mt-4">
	    <% @campaigns.each do |campaign| %>
        <div class="col-lg-4 col-md-6 col-sm-12">
          <div class="card my-3 card-campaign" style="width: 18rem;">
              <% if campaign.photos.first.present? %>
                <%= cl_image_tag campaign.photos.first.key, class: "card-img p-2" %>
              <% else %>
                <%= image_tag('neutral-institution.jpg', class: "p-2") %>
              <% end %>
            <div class="card-body " style="width: 18rem;">
              <h4 class="card-title"> <strong><%= campaign.name %></strong></h4>
                <div class="d-flex ">
                  <div>
                    <span class="badge btn-primary  "> <%=campaign.total_expression%><span>
                  </div>
                  <div>
                    <span class="badge btn-primary"> <%=campaign.indicator%><span>
                  </div>
                 	
                </div>
                <div class="justify-content-end">
                  <%= link_to  campaign do %>
                   <i class="h4 fas fa-search-plus"></i>
                  <% end %>	
                </div>
                
            </div>	
          </div>
        </div>
      <%end%>  
    </div>
  </div>
</div>
