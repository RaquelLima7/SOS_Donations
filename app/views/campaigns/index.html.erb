<div class="container">
  <div class="mr- mt-4">
    <span class="badge badge-success" style="font-size: 2rem;"><strong><%= @campaigns_title %></b></span>
  </div>
  <div class="container mt-3">
    <div class="row mt-4">
	    <% @campaigns.each do |campaign| %>
        <div class="col-lg-4 col-md-6 col-sm-12 mb-5">
          <div class="card my-3 card-campaign h-100 shadow" style="width: 18rem;">
             <% if campaign.photos.first.present? %>
                <%= cl_image_tag campaign.photos.first.key, class: "card-img p-2" %>
              <% else %>
                <%= image_tag('neutral-institution.jpg', class: "p-2") %>
              <% end %>

            <div class="card-body d-flex justify-content-between " style="width: 18rem; flex-direction: column;">
              <h4 class="card-title text-center"> <strong><%= campaign.name %></strong></h4>
              <div class="campaing-info">
                <div class="d-flex justify-content-around">
                  <span class="badge btn-primary"><%= campaign.category %></span>
                  <span class="badge btn-primary"><%= campaign.type_donation %></span>
                </div>
                <div class="progress mt-3">
                  <div class="progress-bar" role="progressbar" style="width: <%= campaign.raised / campaign.total.to_f * 100 %>%;" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"><%= campaign.raised %> / <%= campaign.total %></div>
                </div>
                  <% if campaign.raised >= campaign.total %>
                    <div class="d-flex justify-content-between mt-3">
                      <span class="badge btn-warning">Campagin Complete!</span>
                      <%= link_to campaign do %>
                        <i class="h4 fas fa-search-plus"></i>
                      <% end %>
                    </div>
                  <% else %>
                    <div class="d-flex justify-content-end mt-3">
                      <%= link_to campaign do %>
                      <i class="h4 fas fa-search-plus"></i>
                      <% end %>
                    </div>
                  <% end %>
                </div>
            </div>	
          </div>
        </div>
      <%end%>  
    </div>
  </div>
</div>
