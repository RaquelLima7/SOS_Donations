<div class="container my-5 py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Make an accountability for the donations received.</h3>
        <%= simple_form_for [ @campaign, @accontability ] do |f| %>
          <%= f.input :content, placeholder: 'Tell us your review about the accountability.' %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.submit "Submit accountability", class: 'btn btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>